@model Inventory_M.Models.Categories.Category

@{
    ViewData["Title"] = "Delete";
}

<div style="background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 4px; padding: 20px;">
    <h2 style="font-size: 24px;">Delete</h2>

    <div class="alert alert-danger" role="alert" style="font-size: 20px; margin-bottom: 20px;">
        <strong>Are you sure you want to delete this?</strong>
    </div>

    <div>
        <h4 style="margin-bottom: 10px;">Category</h4>
        <hr style="margin-bottom: 20px;" />
        <dl class="dl-horizontal" style="margin-bottom: 20px;">
            <dt>
                <strong style="font-weight: bold;">@Html.DisplayNameFor(model => model.Category_Name)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category_Name)
            </dd>
        </dl>

        <div style="display: flex; justify-content: space-between;">
            <form asp-action="Delete" style="margin-bottom: 20px;">
                <input type="hidden" asp-for="CategoryId" />
                <input type="submit" value="Delete" class="btn btn-danger" style="width: 150px; height: 40px; font-size: 16px;" />
            </form>
            <a asp-action="Index" style="background-color: #007bff; color: #fff; border: none; padding: 10px 20px; font-size: 16px; border-radius: 4px; text-decoration: none; cursor: pointer; width: 150px; height: 40px; display: flex; justify-content: center; align-items: center;">Back to List</a>
        </div>
    </div>
</div>
