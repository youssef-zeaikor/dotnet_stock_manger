@model Inventory_M.Models.product.Product

@{
    ViewData["Title"] = "Details";
}

<div style="font-family: Arial;">
    <h2 style="font-size: 24px;">Details</h2>

    <div style="background-color: lightgray; border: 1px solid gray; padding: 20px; text-align: center; margin: 0 auto; max-width: 500px;">
        <h3 style="font-size: 18px; color: red; border: 2px solid red; padding: 5px; background-color: #f8d7da;">Are you sure you want to delete this?</h3>
        <div>
            <h4 style="font-size: 20px;">Product</h4>
            <hr />
            <table class="table table-bordered">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Product_Name)</th>
                    <td>@Html.DisplayFor(model => model.Product_Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Barcode)</th>
                    <td>@Html.DisplayFor(model => model.Barcode)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.description)</th>
                    <td>@Html.DisplayFor(model => model.description)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <td>@Html.DisplayFor(model => model.Quantity)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Recorder)</th>
                    <td>@Html.DisplayFor(model => model.Recorder)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Brands)</th>
                    <td>@Html.DisplayFor(model => model.Brands.BrandId)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Categories)</th>
                    <td>@Html.DisplayFor(model => model.Categories.CategoryId)</td>
                </tr>
            </table>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <div style="display:flex; justify-content: space-between; margin-top: 20px;">
                    <input type="submit" value="Delete" style="font-size: 16px; width: 150px; height: 40px; background-color: #dc3545; color: #fff; border-color: #dc3545; padding: 0.375rem 0.75rem; border-radius: 0.25rem; cursor: pointer; display: inline-block; text-decoration: none; text-align: center; line-height: 40px; vertical-align: middle;" />
                    <a asp-action="Index" style="font-size: 16px; width: 150px; height: 40px; background-color: #007bff; color: #fff; border-color: #007bff; padding: 0.375rem 0.75rem; border-radius: 0.25rem; text-decoration: none; cursor: pointer; display: inline-block; text-align: center; line-height: 40px; vertical-align: middle;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>