@model Inventory_M.Models.sale.Sale

@{
    ViewData["Title"] = "Delete";
}

<div style="text-align: center;">
    <div style="display: inline-block; background-color: #f5f5f5; padding: 20px; border-radius: 5px;">
        <h2 style="font-size: 24px;">Delete</h2>
        <h3 style="font-size: 18px; color: red; border: 2px solid red; padding: 5px; background-color: #f8d7da;">Are you sure you want to delete this?</h3>
        <h4 style="margin-bottom: 10px;">Sale</h4>
        <hr style="margin-bottom: 20px;" />
        <dl class="dl-horizontal" style="margin-bottom: 20px; font-size: 20px;">
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.transno)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.transno)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.Disc)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Disc)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.Price)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.Qty)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Qty)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.Date)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.status)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.status)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.Trades)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Trades.TradesId)
            </dd>
            <dt style="text-align: right; float: left;">
                <strong>@Html.DisplayNameFor(model => model.produits)</strong>
            </dt>
            <dd>
                @Html.DisplayFor(model => model.produits.ProductId)
            </dd>

        </dl>

        <form asp-action="Delete" style="margin-bottom: 20px;">
            <input type="hidden" asp-for="saleId" />
            <input type="submit" value="Delete" class="btn btn-danger" style="font-size: 20px; width: 150px; height: 40px;" />
            <a asp-action="Index" class="btn btn-primary" style="font-size: 20px; width: 150px; height: 40px; margin-left: 10px; text-decoration: none;">Back to List</a>
        </form>
    </div>
</div>



