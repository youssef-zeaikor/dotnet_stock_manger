                    @Html.DisplayFor(model => model.venders.VendorId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.products)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.products.ProductId)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="StockInId" />
