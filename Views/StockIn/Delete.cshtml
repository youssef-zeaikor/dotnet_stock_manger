        <h2>Delete</h2>

        <h3 style="font-size: 18px; color: red; border: 2px solid red; padding: 5px; background-color: #f8d7da;">Are you sure you want to delete this?</h3>
        <div>
            <h4>StockIn</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Reference)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Reference)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Quantite)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Quantite)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.stockeby)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.stockeby)
                </dd>

